{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    
    /* CONFIGURAÇÕES TYPEORM */
    "experimentalDecorators": true,      /* Habilita @Entity, @Column, etc. */
    "emitDecoratorMetadata": true,       /* Necessário para o TypeORM ler os tipos */
    "strictPropertyInitialization": false, /* Permite declarar campos na Entidade sem valor inicial */
    
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}